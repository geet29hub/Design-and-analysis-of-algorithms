#include <stdio.h>
#include <stdlib.h>

long long count = 0;

int isSafe(int row, int col, int board[]) {
    for (int i = 0; i < row; i++) {
        if (board[i] == col ||
            board[i] - i == col - row ||
            board[i] + i == col + row) {
            return 0;
        }
    }
    return 1;
}
void solve(int row, int n, int board[]) {
    if (row == n) {
        count++;
        return;
    }

    for (int col = 0; col < n; col++) {
        if (isSafe(row, col, board)) {
            board[row] = col;
            solve(row + 1, n, board);
        }
    }
}
int main() {
    int n;
    scanf("%d", &n);  // Read input from user/test case

    count = 0;
    int *board = malloc(n * sizeof(int));
    if (board == NULL) {
        printf("Memory allocation failed\n");
        return 1;
	}
    solve(0, n, board);
    free(board);

    printf("%lld\n", count);  // Print result as required by CodeTantra
    return 0;
}
